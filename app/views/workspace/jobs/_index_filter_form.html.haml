= form_tag workspace_jobs_path, method: 'GET', class: "form-inline well right-top-form" do

  %fieldset
    .pull-right
      %ul.list-inline
        %li
          .form-group
            %label.sr-only{for: "repository_names"}
            = text_field :repository, :names, placeholder: "Repository name 1, ...", 
              value: repository_names_filter.join(", "), 
              data: {autocomplete_path: names_workspace_repositories_path}, 
              class: "form-control input-sm"
        %li
          .form-group
            %label.sr-only{for: "branch_names"}
            = text_field :branch, :names, placeholder: "Branch name 1, ...",
              value: branch_names_filter.join(", "), 
              data:{autocomplete_path: names_workspace_branches_path}, 
              class: "form-control input-sm"

        %li
          .form-group
            %label.sr-only{for: "tree_id"}
            = text_field_tag :tree_id, tree_id_filter, 
              placeholder: "tree_id",
              class: "form-control input-sm"

      %ul.list-inline.pull-right

        %li
          .form-group
            %label.sr-only{for: "job_tags"}
            = text_field_tag :job_tags, nil, placeholder: "tag 1, tag 2, ...",
              value: job_tags_filter.join(", "), 
              data:{autocomplete_path: workspace_tags_path}, 
              class: "form-control input-sm"

        %li
          = render 'per_page_form_group'

        %li
          =link_to workspace_jobs_path, class: 'btn btn-sm btn-warning' do
            %i.icon-remove-sign
            Reset
        %li
          =button_tag type: 'submit', class: 'btn btn-sm btn-primary' do
            %i.icon-filter
            Filter


